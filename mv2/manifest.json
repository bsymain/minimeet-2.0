{
    "name": "MiniMeet",
    "description": "Automatically join meetings on your calendar.",
    "version": "1.0.0",
    "permissions": [
        "activeTab",
        "tabs",
        "webNavigation",
        "https://meet.google.com/",
        "https://accounts.google.com/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "web_accessible_resources": [
        "content/*",
        "services/*",
        "util/*",
        "config/creds.js"
    ],
    "manifest_version": 2
}

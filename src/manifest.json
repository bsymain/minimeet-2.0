{
    "name": "MiniMeet",
    "version": "1.0.7",
    "description": "Automatically join meetings on your calendar.",
    "permissions": [
        "https://meet.google.com/",
        "https://accounts.google.com/"
    ],
    "background": {
        "scripts": [
            "extension/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Join the next meeting on your calendar."
    },
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["https://accounts.google.com/*", "https://meet.google.com/*"],
            "js": ["shared/dom.js", "shared/state.js"]
        }
    ]
}

{
    "name": "MiniMeet",
    "version": "1.0",
    "description": "Automatically join meetings on your calendar.",
    "permissions": ["declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
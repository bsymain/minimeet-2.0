{
    "name": "MiniMeet",
    "version": "1.0",
    "description": "Automatically join meetings on your calendar.",
    "content_scripts": [
        {
            "matches": ["https://meet.google.com/*"],
            "exclude_globs": ["https://meet.google.com/*-*"],
            "run_at": "document_idle",
            "js": ["chooseMeeting.js"]
        },
        {
            "matches": ["https://meet.google.com/*"],
            "include_globs": ["https://meet.google.com/*-*"],
            "run_at": "document_idle",
            "js": ["joinMeeting.js"]
        }
    ],
    "manifest_version": 2
}